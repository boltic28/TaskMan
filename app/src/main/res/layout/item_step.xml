<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Item">

    <TextView
        android:id="@+id/item_step_header"
        style="@style/Item.Header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="One small step" />

    <ImageView
        android:id="@+id/item_step_image"
        style="@style/Item.Image"
        android:contentDescription="@string/description_icon_of_step"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_step_header" />

    <ImageView
        android:id="@+id/item_step_status_icon"
        style="@style/ItemFragment.IsDone"
        android:contentDescription="@string/description"
        app:layout_constraintBottom_toBottomOf="@id/item_step_header"
        app:layout_constraintLeft_toRightOf="@id/item_step_header"
        app:layout_constraintTop_toTopOf="@id/item_step_header" />

    <TextView
        android:id="@+id/item_step_start"
        style="@style/Item.Start"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="since: 22.09.2020" />

    <TextView
        android:id="@+id/item_step_text_progress"
        style="@style/Item.TextProgress"
        android:text="@string/item_progress"
        app:layout_constraintBottom_toBottomOf="@+id/item_step_progress_container"
        app:layout_constraintRight_toLeftOf="@+id/item_step_progress_container" />

    <LinearLayout
        android:id="@+id/item_step_progress_container"
        style="@style/Item.ProgressContainer"
        app:layout_constraintBottom_toBottomOf="@+id/item_step_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_step_image">

        <ImageView
            android:id="@+id/item_step_progress_100_percent"
            style="@style/Item.ProgressPoint"
            android:contentDescription="@string/description_icon_of_goal" />

        <ImageView
            android:id="@+id/item_step_progress_80_percent"
            style="@style/Item.ProgressPoint"
            android:contentDescription="@string/description_icon_of_goal" />

        <ImageView
            android:id="@+id/item_step_progress_60_percent"
            style="@style/Item.ProgressPoint"
            android:contentDescription="@string/description_icon_of_goal" />

        <ImageView
            android:id="@+id/item_step_progress_40_percent"
            style="@style/Item.ProgressPoint"
            android:contentDescription="@string/description_icon_of_goal" />

        <ImageView
            android:id="@+id/item_step_progress_20_percent"
            style="@style/Item.ProgressPoint"
            android:contentDescription="@string/description_icon_of_goal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_step_status_container"
        style="@style/Item.StatusContainer"
        app:layout_constraintBottom_toBottomOf="@id/item_step_image"
        app:layout_constraintLeft_toRightOf="@id/item_step_image">

        <ImageView
            android:id="@+id/item_step_status_attention"
            style="@style/Item.StatusPoint"
            android:contentDescription="@string/description_icon_of_goal"
            android:src="@drawable/ic_attention" />

        <ImageView
            android:id="@+id/item_step_status_started"
            style="@style/Item.StatusPoint"
            android:contentDescription="@string/description_icon_of_goal"
            android:src="@drawable/ic_started" />

        <ImageView
            android:id="@+id/item_step_status_done"
            style="@style/Item.StatusPoint"
            android:contentDescription="@string/description_icon_of_goal"
            android:src="@drawable/ic_done" />

        <ImageView
            android:id="@+id/item_step_status_linked"
            style="@style/Item.StatusPoint"
            android:contentDescription="@string/description_icon_of_goal"
            android:src="@drawable/ic_link" />

    </LinearLayout>

    <TextView
        android:id="@+id/item_step_description"
        style="@style/Item.Description"
        android:maxLines="2"
        app:layout_constraintLeft_toRightOf="@id/item_step_image"
        app:layout_constraintRight_toLeftOf="@id/item_step_progress_container"
        app:layout_constraintTop_toBottomOf="@id/item_step_header"
        tools:text="since: 22.09.2020 Some stupid idea come into my head,since: 22.09.2020 Some stupid idea come into my head,since: 22.09...." />

</androidx.constraintlayout.widget.ConstraintLayout>