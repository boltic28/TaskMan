<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ItemFragment">

    <ImageView
        android:id="@+id/step_fr_image"
        style="@style/ItemFragment.Image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/description"/>

    <ImageView
        android:id="@+id/step_fr_isDone_icon"
        style="@style/ItemFragment.IsDone"
        app:layout_constraintLeft_toRightOf="@id/step_fr_name"
        app:layout_constraintTop_toTopOf="@id/step_fr_name"
        app:layout_constraintBottom_toBottomOf="@id/step_fr_name"
        android:contentDescription="@string/description"/>

    <TextView
        android:id="@+id/step_fr_name"
        style="@style/ItemFragment.Header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/step_fr_image"
        tools:text="Some Step Into" />

    <TextView
        android:id="@+id/step_fr_start_date"
        style="@style/ItemFragment.StartDate"
        app:layout_constraintRight_toLeftOf="@id/step_fr_image"
        app:layout_constraintTop_toBottomOf="@id/step_fr_name"
        tools:text="23 sep 2020" />

    <TextView
        android:id="@+id/step_fr_status"
        style="@style/ItemFragment.OtherText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/step_fr_start_date"
        tools:text="Status: not started" />

    <TextView
        android:id="@+id/step_fr_progress"
        style="@style/ItemFragment.OtherText"
        app:layout_constraintBottom_toTopOf="@+id/step_fr_progress_container"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="Progress: 60%" />

    <LinearLayout
        android:id="@+id/step_fr_progress_container"
        style="@style/ItemFragment.Progress"
        app:layout_constraintBottom_toBottomOf="@id/step_fr_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/step_fr_image">

        <ImageView
            android:id="@+id/step_fr_progress_20"
            style="@style/ItemFragment.Progress.Section"
            android:contentDescription="@string/description"/>

        <ImageView
            android:id="@+id/step_fr_progress_40"
            style="@style/ItemFragment.Progress.Section"
            android:contentDescription="@string/description"/>

        <ImageView
            android:id="@+id/step_fr_progress_60"
            style="@style/ItemFragment.Progress.Section"
            android:contentDescription="@string/description"/>

        <ImageView
            android:id="@+id/step_fr_progress_80"
            style="@style/ItemFragment.Progress.Section"
            android:contentDescription="@string/description"/>

        <ImageView
            android:id="@+id/step_fr_progress_100"
            style="@style/ItemFragment.Progress.Section"
            android:contentDescription="@string/description"/>

    </LinearLayout>

    <TextView
        android:id="@+id/step_fr_common_data"
        style="@style/ItemFragment.Header2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/step_fr_image"
        android:text="@string/information_about" />

    <TextView
        android:id="@+id/step_fr_description_header"
        style="@style/ItemFragment.Header2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/step_fr_common_data"
        android:text="@string/description" />

    <TextView
        android:id="@+id/step_fr_description_content"
        style="@style/ItemFragment.OtherText"
        app:layout_constraintLeft_toRightOf="@id/step_fr_description_header"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/step_fr_description_header"
        tools:text="description of some step, description of some goal, description of some goal," />

    <TextView
        android:id="@+id/step_fr_close_date_header"
        style="@style/ItemFragment.Header2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/step_fr_description_content"
        android:text="@string/close_before" />

    <TextView
        android:id="@+id/step_fr_close_date_content"
        style="@style/ItemFragment.OtherText"
        app:layout_constraintLeft_toRightOf="@id/step_fr_description_header"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/step_fr_close_date_header"
        tools:text="must finish to: 20 Mar 2021" />

    <TextView
        android:id="@+id/step_fr_relative_header"
        style="@style/ItemFragment.Header2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/step_fr_close_date_content"
        android:text="@string/attached_to" />

    <TextView
        android:id="@+id/step_fr_relative_owner"
        style="@style/ItemFragment.OtherText"
        app:layout_constraintLeft_toRightOf="@id/step_fr_description_header"
        app:layout_constraintTop_toTopOf="@id/step_fr_relative_header"
        tools:text="@string/not_attached" />

    <ImageButton
        android:id="@+id/step_fr_owner_button"
        style="@style/ItemFragment.Button.Relative"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/step_fr_relative_owner"
        app:layout_constraintBottom_toBottomOf="@id/step_fr_relative_owner"
        android:contentDescription="@string/image_button_description" />

    <TextView
        android:id="@+id/step_fr_its_elements"
        style="@style/ItemFragment.Header2"
        app:layout_constraintTop_toBottomOf="@+id/step_fr_relative_owner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/elements" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/step_fr_recycler"
        style="@style/ItemFragment.Recycler"
        app:layout_constraintBottom_toTopOf="@+id/step_fr_button_action"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/step_fr_its_elements" />

    <ImageButton
        android:id="@+id/step_fr_button_back"
        style="@style/ItemFragment.Button.Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/step_fr_button_action"
        app:layout_constraintTop_toTopOf="@+id/step_fr_button_action"
        android:contentDescription="@string/description" />

    <ImageButton
        android:id="@+id/step_fr_button_action"
        style="@style/ItemFragment.Button.Action"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/step_fr_button_back"
        app:layout_constraintRight_toLeftOf="@+id/step_fr_button_home"
        app:layout_constraintTop_toBottomOf="@+id/step_fr_recycler"
        android:contentDescription="@string/description" />

    <ImageButton
        android:id="@+id/step_fr_button_home"
        style="@style/ItemFragment.Button.Home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/step_fr_button_action"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/step_fr_button_action"
        android:contentDescription="@string/description" />

</androidx.constraintlayout.widget.ConstraintLayout>