<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/idea_fr_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/idea_image_description" />

    <TextView
        android:id="@+id/idea_fr_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="32sp"
        tools:text="Idea numb 2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/idea_fr_start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        tools:text = "23 sep 2020"
        app:layout_constraintRight_toRightOf="@id/idea_fr_name"
        app:layout_constraintTop_toBottomOf="@id/idea_fr_name"
        />

    <TextView
        android:id="@+id/idea_fr_is_attached"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="not attached"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toRightOf="@id/idea_fr_owner_button"
        app:layout_constraintBottom_toBottomOf="@id/idea_fr_image"
        />

    <ImageButton
        android:id="@+id/idea_fr_owner_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_link"
        android:background="@color/transparent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/idea_fr_is_attached"
        app:layout_constraintRight_toLeftOf="@+id/idea_fr_is_attached"
        android:contentDescription="@string/image_button_description" />

    <TextView
        android:id="@+id/idea_fr_common_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        tools:text="information about:"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/idea_fr_image"
        />

    <TextView
        android:id="@+id/idea_fr_description_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        tools:text="Description:"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/idea_fr_common_data"
        />

    <TextView
        android:id="@+id/idea_fr_description_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        tools:text = "description of some goal, description of some goal, description of some goal,"
        app:layout_constraintLeft_toRightOf="@id/idea_fr_description_header"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/idea_fr_common_data"
        />

    <TextView
        android:id="@+id/idea_fr_name_of_list_in_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/idea_fr_description_content"
        tools:text="Elements" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/idea_fr_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/idea_fr_add_action"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idea_fr_name_of_list_in_recycler" />

    <Button
        android:id="@+id/idea_fr_add_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/convert_to"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>