<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/main_panel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/main_panel"
        style="@style/SearchPanel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/main_add_button"
        app:layout_constraintTop_toBottomOf="@+id/main_recycler"
        tools:ignore="RtlSymmetry">

        <EditText
            android:id="@+id/main_search_field"
            style="@style/Main.Search"
            android:autofillHints="@string/Search"
            android:drawableStart="@drawable/ic_search"
            tools:ignore="LabelFor" />

        <ImageButton
            android:id="@+id/main_free_goals"
            style="@style/Main.Buttons"
            android:contentDescription="@string/description"
            android:src="@drawable/goal_ph" />

        <ImageButton
            android:id="@+id/main_free_steps"
            style="@style/Main.Buttons"
            android:contentDescription="@string/description"
            android:src="@drawable/step_ph" />

        <ImageButton
            android:id="@+id/main_free_tasks"
            style="@style/Main.Buttons"
            android:contentDescription="@string/description"
            android:src="@drawable/task_ph" />

        <ImageButton
            android:id="@+id/main_free_keys"
            style="@style/Main.Buttons"
            android:contentDescription="@string/description"
            android:src="@drawable/key_ph" />

        <ImageButton
            android:id="@+id/main_free_ideas"
            style="@style/Main.Buttons"
            android:contentDescription="@string/description"
            android:src="@drawable/idea_ph" />
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/main_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/colorSignFieldEnd"
        android:clickable="true"
        android:contentDescription="@string/description"
        android:foregroundTint="#FFFFFF"
        app:fabSize="auto"
        app:layout_constraintBottom_toTopOf="@+id/main_panel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/main_panel"
        app:maxImageSize="36dp"
        app:srcCompat="@drawable/ic_add" />


</androidx.constraintlayout.widget.ConstraintLayout>