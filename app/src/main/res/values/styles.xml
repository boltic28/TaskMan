<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FillSpace">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="AppEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/colorHintText</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/colorSecondText</item>
    </style>

    <style name="AppSecondText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorSecondText</item>
    </style>

    <style name="AppThirdText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorSecondText</item>
    </style>

    <style name="AppMainText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorSecondText</item>
    </style>

    <style name="AppScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/item_fragment_layout_padding</item>
    </style>

    <!-- Sign Fragment-->
    <style name="Sign.Text.Info" parent="AppSecondText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sign_info_text_size</item>
        <item name="android:text">@string/sign_signin_or_register</item>
    </style>

    <style name="Sign.Fields" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/sign_field_height</item>
        <item name="android:background">@drawable/bg_sign_fields</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">italic</item>
        <item name="android:paddingStart">@dimen/sign_field_text_start_padding</item>
        <item name="android:textSize">@dimen/sign_field_text_size</item>
    </style>

    <style name="Sign.Fields.Login">
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:layout_marginTop">@dimen/sign_info_text_margin_bottom</item>
        <item name="android:layout_marginEnd">@dimen/sign_field_login_margin_end</item>
        <item name="android:hint">@string/email_mail_com</item>
    </style>

    <style name="Sign.Fields.Password">
        <item name="android:inputType">textPassword</item>
        <item name="android:layout_marginTop">@dimen/sign_field_password_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/sign_field_password_margin_end</item>
        <item name="android:hint">@string/password</item>
    </style>

    <style name="Sign.Button" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bg_sign_button</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginTop">@dimen/sign_field_password_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/sign_field_password_margin_end</item>
    </style>

    <style name="Sign.Button.In">
        <item name="android:backgroundTint">?attr/themeSignButtonInBgColor</item>
        <item name="android:text">@string/sign_in</item>
    </style>

    <style name="Sign.Button.Up">
        <item name="android:backgroundTint">?attr/themeSignButtonUpBgColor</item>
        <item name="android:text">@string/sign_up</item>
    </style>

    <style name="Sign.Progress" parent="Widget.AppCompat.ProgressBar">
        <item name="android:visibility">invisible</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:layout_width">@dimen/sign_progress_bar_size</item>
        <item name="android:layout_height">@dimen/sign_progress_bar_size</item>
    </style>

    <!-- Main Fragment-->
    <style name="Main.Search" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">@dimen/main_search_field_w</item>
        <item name="android:layout_height">@dimen/main_search_field_h</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="SearchPanel.IconButton">
        <item name="android:layout_width">@dimen/main_item_switcher_button_w</item>
        <item name="android:layout_height">@dimen/main_item_switcher_button_h</item>
        <item name="android:layout_margin">@dimen/main_panel_searching_margin</item>
    </style>

    <style name="Main.FAB" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/main_fab_margin_end</item>
        <item name="android:clickable">true</item>
        <item name="android:foregroundTint">@color/colorMainFabImage</item>
        <item name="android:backgroundTint">@color/colorMainFab</item>
        <item name="maxImageSize">@dimen/main_fab_max_size</item>
        <item name="srcCompat">@drawable/ic_add</item>
        <item name="fabSize">auto</item>
    </style>

    <style name="Main.Buttons" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/main_item_switcher_button_w</item>
        <item name="android:layout_height">@dimen/main_item_switcher_button_h</item>
        <item name="android:layout_marginTop">@dimen/main_panel_button_margin_top</item>
        <item name="android:layout_marginStart">@dimen/main_panel_button_margin_start</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="SearchPanel" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/main_panel_height</item>
        <item name="android:background">@drawable/bg_sign_fields</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">@dimen/main_panel_searching_padding_start</item>
        <item name="android:inputType">text</item>
    </style>

    <!-- Creator Fragment-->
    <style name="Creator.Fragment" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/item_fragment_layout_padding</item>
    </style>

    <style name="Creator.Name" parent="AppEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/input_name_of_item</item>
    </style>

    <style name="Creator.Description" parent="AppEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:hint">@string/input_description_of_item</item>
    </style>

    <style name="Creator.CloseDate" parent="AppSecondText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/item_fragment_margin_between_view</item>
        <item name="android:text">@string/close_date</item>
        <item name="android:textSize">@dimen/creator_close_date_text_size</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="Creator.CloseDateVal" parent="AppSecondText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/item_fragment_margin_between_blocks</item>
        <item name="android:textSize">@dimen/creator_close_date_text_size</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="Creator.CheckBox" parent="AppSecondText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/is_cycle</item>
        <item name="android:layout_marginTop">@dimen/item_fragment_margin_between_view</item>
        <item name="android:textSize">@dimen/creator_close_date_text_size</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="Creator.Spinner" parent="AppSecondText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/item_fragment_margin_between_blocks</item>
        <item name="android:textSize">@dimen/creator_close_date_text_size</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="Creator.Button" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/item_fragment_margin_between_view</item>
        <item name="android:background">@drawable/bg_sign_button</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <!-- Converter -->
    <style name="Converter" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/item_fragment_layout_padding</item>
    </style>

    <style name="Converter.Headers" parent="AppMainText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/converter_headers_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Converter.ContentEdit" parent="AppEditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/item_fragment_margin_between_view</item>
        <item name="android:layout_marginStart">@dimen/item_fragment_margin_between_blocks</item>
        <item name="android:textSize">@dimen/converter_other_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Converter.ContentText" parent="AppSecondText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/item_fragment_margin_between_view</item>
        <item name="android:layout_marginStart">@dimen/item_fragment_margin_between_blocks</item>
        <item name="android:textSize">@dimen/converter_other_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Converter.RadioGroup" parent="AppSecondText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_fragment_converter_radio_group_high</item>
        <item name="android:layout_marginTop">@dimen/item_fragment_margin_between_blocks</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:textSize">@dimen/converter_other_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Converter.RadioItem" parent="AppSecondText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="CycleCheck" parent="AppSecondText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:enabled">false</item>
        <item name="android:text">@string/is_cycle</item>
    </style>

    <!-- ItemFragment -->
    <style name="ItemFragment" parent="AppScreen">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ItemFragment.Header" parent="AppMainText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/item_fragment_header1_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemFragment.IsDone" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">@dimen/item_fragment_is_done_size</item>
        <item name="android:layout_height">@dimen/item_fragment_is_done_size</item>
        <item name="android:layout_marginStart">@dimen/item_fragment_small_padding</item>
        <item name="android:layout_marginEnd">@dimen/item_fragment_small_padding</item>
        <item name="android:visibility">invisible</item>
        <item name="android:src">@drawable/done_ph</item>
    </style>

    <style name="ItemFragment.StartDate">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:layout_marginEnd">@dimen/item_fragment_margin_between_view</item>
        <item name="android:textSize">@dimen/item_fragment_other_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorMainText</item>
    </style>

    <style name="ItemFragment.Header2" parent="AppMainText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/item_fragment_margin_between_blocks</item>
        <item name="android:textSize">@dimen/item_fragment_other_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemFragment.OtherText" parent="AppSecondText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/item_fragment_margin_between_blocks</item>
        <item name="android:textSize">@dimen/item_fragment_other_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ItemFragment.Image" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">@dimen/item_fragment_image_size</item>
        <item name="android:layout_height">@dimen/item_fragment_image_size</item>
        <item name="android:src">@drawable/goal_ph</item>
    </style>

    <style name="ItemFragment.Progress" parent="Widget.Design.TabLayout">
        <item name="android:layout_width">@dimen/item_progress_width</item>
        <item name="android:layout_height">@dimen/item_progress_high</item>
        <item name="android:layout_marginTop">@dimen/item_fragment_progress_block_margin_top</item>
        <item name="android:visibility">invisible</item>
        <item name="android:layout_marginStart">@dimen/item_fragment_margin_between_blocks</item>
        <item name="android:layout_marginEnd">@dimen/item_fragment_margin_between_blocks</item>
    </style>

    <style name="ItemFragment.Progress.Section" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/item_fragment_progress_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/colorItemProgressOff</item>
    </style>

    <style name="ItemFragment.Recycler">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">@dimen/item_fragment_margin_between_blocks</item>
        <item name="android:layout_marginBottom">@dimen/item_fragment_margin_between_blocks</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="ItemFragment.Button.Relative" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/item_fragment_button_link_size</item>
        <item name="android:layout_marginEnd">@dimen/item_fragment_margin_between_blocks</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:src">@drawable/ic_link</item>
    </style>

    <style name="ItemFragment.Button.Settings" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/item_fragment_button_settings_size</item>
        <item name="android:layout_height">@dimen/item_fragment_button_settings_size</item>
        <item name="android:background">@drawable/bg_white_circle</item>
        <item name="android:src">@drawable/ic_settings</item>
    </style>

    <style name="ItemFragment.RecyclerGroup" parent="Widget.Design.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="ItemFragment.Converter" parent="Widget.Design.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="ItemFragment.ButtonsGroup" parent="Widget.Design.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ItemFragment.Button" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/item_fragment_buttons_height</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/bg_white_circle</item>
        <item name="android:backgroundTint">@color/colorItemFRButtonsBg</item>
    </style>

    <style name="ItemFragment.Button.Home">
        <item name="android:src">@drawable/ic_home</item>
    </style>

    <style name="ItemFragment.Button.Back">
        <item name="android:src">@drawable/ic_back</item>
    </style>

    <style name="ItemFragment.Button.Action">
        <item name="android:src">@drawable/ic_link</item>
    </style>

    <!-- Items big rows-->
    <style name="Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_row_high</item>
        <item name="android:padding">@dimen/item_fragment_layout_padding</item>
    </style>

    <style name="Item.Header" parent="AppMainText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/item_row_text_header</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Item.Start" parent="AppSecondText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/item_row_text_start</item>
    </style>

    <style name="Item.Description" parent="AppThirdText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:paddingStart">@dimen/item_row_description_padding</item>
        <item name="android:paddingTop">@dimen/item_row_description_padding</item>
        <item name="android:textSize">@dimen/item_row_text_description</item>
    </style>

    <style name="Item.TextProgress" parent="AppSecondText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/item_margin_left_image_progress</item>
        <item name="android:textSize">@dimen/item_row_text_progress</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="Item.ProgressPoint" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/colorItemProgressOff</item>
    </style>

    <style name="Item.StatusPoint" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">@dimen/item_image_status_size</item>
        <item name="android:layout_height">@dimen/item_image_status_size</item>
        <item name="android:layout_weight">1</item>
        <item name="android:visibility">gone</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="Item.Image" parent="TextAppearance.AppCompat">
        <item name="android:src">@drawable/goal_ph</item>
        <item name="android:layout_width">@dimen/item_image_size</item>
        <item name="android:layout_height">@dimen/item_image_size</item>
    </style>

    <style name="Item.ProgressContainer" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:layout_width">@dimen/item_progress_width</item>
        <item name="android:layout_height">@dimen/item_progress_high</item>
        <item name="android:visibility">invisible</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Item.StatusContainer" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/item_fragment_margin_between_view</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Item.Button.Action" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/item_idea_button_h</item>
        <item name="android:visibility">invisible</item>
        <item name="android:layout_marginStart">@dimen/item_idea_space_between_button</item>
        <item name="android:textSize">@dimen/item_idea_text_on_button</item>
    </style>

    <!-- Items small rows-->
    <style name="ItemSm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_small_row_high</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ItemSm.Image" parent="TextAppearance.AppCompat">
        <item name="android:src">@drawable/goal_ph</item>
        <item name="android:layout_width">@dimen/item_small_image_size</item>
        <item name="android:layout_height">@dimen/item_small_image_size</item>
        <item name="android:layout_margin">@dimen/item_small_margin_between_elements</item>
    </style>

    <style name="ItemSm.Image.Status" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">@dimen/item_small_image_status_size</item>
        <item name="android:layout_height">@dimen/item_small_image_status_size</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginStart">@dimen/item_small_minus_margin_for_status</item>
        <item name="android:layout_marginBottom">@dimen/item_small_margin_between_elements</item>
    </style>

    <style name="ItemSm.Header" parent="AppMainText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_gravity">center_vertical</item>
