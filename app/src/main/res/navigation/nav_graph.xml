<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/signFragment"
        android:name="com.boltic28.taskmanager.ui.screens.sign.SignFragment"
        android:label="SignFragment" >
        <action
            android:id="@+id/action_signFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.boltic28.taskmanager.ui.screens.main.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_signFragment"
            app:destination="@id/signFragment" />
        <action
            android:id="@+id/action_mainFragment_to_creatorFragment"
            app:destination="@id/creatorFragment" />
    </fragment>
    <fragment
        android:id="@+id/creatorFragment"
        android:name="com.boltic28.taskmanager.ui.screens.creator.CreatorFragment"
        android:label="CreatorFragment" >
        <action
            android:id="@+id/action_creatorFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
</navigation>